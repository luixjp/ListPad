<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifsp.scl.sdm.listpad">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListPad">
        <activity
            android:name=".activity.CadastroPlaceActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PlaceEditActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PlaceViewActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CountryEditActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CadastroCountryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CountryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PlaceActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>